<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PatternView">
        <!-- This is the maximum size the view will take in wrap_content mode. -->
        <attr name="maxSize" format="dimension"/>
        <!-- Number of rows and columns in the matrix. -->
        <attr name="gridSize" format="integer"/>
        <!-- The color when the view is initialized -->
        <attr name="circleIdleColor" format="color"/>
        <!-- The color when circle is wrong -->
        <attr name="circleRightColor" format="color"/>
        <!-- The color when circle is wrong -->
        <attr name="circleWrongColor" format="color"/>
        <!-- The color when path is initialized -->
        <attr name="pathIdleColor" format="color"/>
        <!-- The color when path is wrong -->
        <attr name="pathRightColor" format="color"/>
        <!-- The color when path is wrong -->
        <attr name="pathWrongColor" format="color"/>
        <!-- The line diameter factor -->
        <attr name="diameterFactor" format="float"/>
    </declare-styleable>

</resources>